@model IEnumerable<SchedulingPatients.MVC.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Cargo/Departamento</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Novo</a>
</p>
<table class="table table-hover table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" type="button" class="btn btn-success btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" type="button" class="btn btn-warning btn-sm">Ver</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" type="button" class="btn btn-danger btn-sm">Excluir</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
